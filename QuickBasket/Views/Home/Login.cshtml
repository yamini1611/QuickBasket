@model QuickBasket.Models.User@{    ViewBag.Title = "Login";    Layout = "~/Views/Shared/_Layout.cshtml";}@using (Html.BeginForm()){@Html.AntiForgeryToken()<div class="container">    <div class="row" >        <div class="col-md-6" id="col">            <div class="row" id="main-row">                <div class="card-header">                    <h2 class="text-center">Login form</h2>                </div>                <div class="card-body ">                    <div class="row">                        <div class="form-group mt-4">                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @id = "form" ,@PlaceHolder="Enter Username"})                            @Html.ValidationMessageFor(m => m.Username)                        </div>                        <div class="form-group mt-3">                            @Html.PasswordFor(m => m.password, new { @class = "form-control", @id = "form" ,@PlaceHolder ="Enter Password"})                            @Html.ValidationMessageFor(m => m.password)                        </div>                        <div class="form-group text-center">                            <button type="submit" class="btn btn-success mt-3">Login</button>                            <a href="@Url.Action("Register","Home")" class="btn btn-warning mt-3">New User</a>                        </div>                    </div>                </div>            </div>                   </div>        <div class="col-md-6 px-0">            <img src="~/Content/Images/free Delivery.png" class="img-fluid" id="banner-img" />        </div>    </div></div><style>    #col {        background-color: black;        color: white;    }    #form {        margin-left:auto;        margin-right:auto;    }    #main-row{        margin-top:5.5em!important;    }    #banner-img{        width:40em;        height:30em;    }    a{        text-decoration:none;    }</style>}